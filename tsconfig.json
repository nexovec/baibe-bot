{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext","ES7"],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}
